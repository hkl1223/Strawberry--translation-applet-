/**index.wxss**/
.change {
  color: #8995a1;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}

.change .icon-right {
  color: #888;
}

.change .icon-down {
  color: #8995a1;
  font-size: 20rpx;
}

.input-area {
  position: relative;
}

.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}

.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100%-48rpx);
  margin: 0;
  box-sizing: border-box;
}